<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_margin="@dimen/cv_margin"
    app:cardElevation="@dimen/cv_elevation"
    app:cardCornerRadius="@dimen/cv_corner_radius"
    app:cardBackgroundColor="@color/cv_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/cv_padding">

        <ImageView
            android:id="@+id/cv_image"
            android:layout_width="@dimen/cv_image_width_size"
            android:layout_height="@dimen/cv_image_height_size"
            android:contentDescription="@string/content_description"
            tools:src="@drawable/img_balboa_park" />

        <TextView
            android:id="@+id/cv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pacifico"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/cv_padding"
            android:textSize="@dimen/cv_text_size"
            tools:text="@string/test_title" />

    </LinearLayout>

</androidx.cardview.widget.CardView>